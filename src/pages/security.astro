---
import Base from "@layouts/Base.astro";
import { getEntryBySlug } from "astro:content";
import Default from "@layouts/Default.astro";
import CtaSosApp from "@layouts/components/CtaSosApp.astro";

const entry = await getEntryBySlug("security", "index");
const { title, meta_title, description, image, call_to_action } = entry.data;

// const cta = await getEntryBySlug("homepage", "index");
// const { call_to_action } = cta.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <Default data={entry} />

  <CtaSosApp cta={call_to_action} />

</Base>
